<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:contentDescription="Cargando"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:contentDescription="Mensaje de error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Error message" />

    <ScrollView
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/albumCoverImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/artistTitleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Artista"
                android:textSize="24sp"
                android:textStyle="bold"
                android:contentDescription="Título de la sección artista" />

            <TextView
                android:id="@+id/artistNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textStyle="italic"
                android:textSize="18sp"
                android:contentDescription="Nombre del artista"
                tools:text="Shakira" />
            
            <TextView
                android:id="@+id/birthDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fecha de nacimiento"
                android:textSize="20sp"
                android:textStyle="bold"
                android:contentDescription="Título de la sección fecha de nacimiento" />

            <TextView
                android:id="@+id/birthDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:contentDescription="Fecha de nacimiento del artista"
                tools:text="AAAA-MM-DD" />

            <TextView
                android:id="@+id/biographyLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Biografia"
                android:textSize="20sp"
                android:textStyle="bold"
                android:contentDescription="Título de la sección biografía" />

            <TextView
                android:id="@+id/biographyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:contentDescription="Biografía del artista"
                tools:text="Lorem ipsum dolor sit amet, consectetur serunt mollit anim id est laborum" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Albums"
                android:textSize="20sp"
                android:textStyle="bold"
                android:contentDescription="Título de la sección álbumes" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/albumsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:contentDescription="Lista de álbumes del artista"
                tools:itemCount="3"
                tools:listitem="@layout/item_album" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Performers"
                android:textSize="20sp"
                android:textStyle="bold"
                android:contentDescription="Título de la sección intérpretes" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/performersPrizesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:contentDescription="Lista de premios del artista"
                tools:itemCount="2"
                tools:listitem="@layout/item_performer_prize" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 